 <animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>position/altitude-agl-ft</property>
  <offset-deg>0.0</offset-deg>
  <interpolation>
   <entry>
    <ind>-100000.0</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>0.0</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>500</ind>
    <dep>180.0</dep>
   </entry>
   <entry>
    <ind>2250</ind>
    <dep>270.0</dep>
   </entry>
   <entry>
    <ind>100000.0</ind>
    <dep>0.0</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>0.001333</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation> 
 
 


 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
