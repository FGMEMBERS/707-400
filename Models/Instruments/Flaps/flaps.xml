<?xml version="1.0"?>

<!-- E3 flap position indicator, by Dave Culp -->

<PropertyList>

 <path>flaps.ac</path>

 <animation>
  <type>material</type>
  <object-name>face</object-name>
  <object-name>needle</object-name>
<emission>
	 <red>0.3</red>
	 <green>0.25</green>
	 <blue>0.2</blue>
	 <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>	
 </emission>
  </animation>  

<animation>
  <type>material</type>
  <object-name>box</object-name>
<emission>
	 <red>0.3</red>
	 <green>0.25</green>
	 <blue>0.2</blue>
	 <factor-prop>controls/lighting/panel-norm</factor-prop>	
 </emission>
  </animation>  

 <animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>surface-positions/flap-pos-norm</property>
    <interpolation>
      <entry><ind>  0.000</ind><dep>   0.0</dep></entry>
      <entry><ind>  0.125</ind><dep>  25.0</dep></entry>
      <entry><ind>  0.250</ind><dep>  50.0</dep></entry>
      <entry><ind>  0.375</ind><dep>  87.0</dep></entry>
      <entry><ind>  0.500</ind><dep> 109.0</dep></entry>
      <entry><ind>  0.625</ind><dep> 145.0</dep></entry>
      <entry><ind>  0.750</ind><dep> 182.0</dep></entry>
      <entry><ind>  0.875</ind><dep> 216.0</dep></entry>
      <entry><ind>  1.000</ind><dep> 250.0</dep></entry>
    </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation> 


 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
