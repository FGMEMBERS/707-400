<?xml version="1.0"?>
<PropertyList>

    <path>rmi.ac</path>

    <animation>
        <type>material</type>
        <object-name>RMI.compass</object-name>
        <object-name>RMI.face</object-name>
        <object-name>RMI.btn</object-name>
        <object-name>VORneedle</object-name>
        <object-name>ADFneedle</object-name>
<emission>
	 <red>0.3</red>
	 <green>0.25</green>
	 <blue>0.2</blue>
	 <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>	
 </emission>
        </animation>

 <animation>
        <type>material</type>
        <object-name>RMI.bezel</object-name>
        <object-name>RMI.btn</object-name>
 <emission>
	 <red>0.3</red>
	 <green>0.25</green>
	 <blue>0.2</blue>
	 <factor-prop>controls/lighting/panel-norm</factor-prop>	
 </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>RMI.compass</object-name>
        <property>orientation/heading-magnetic-deg</property>
        <object-name>VORneedle</object-name>
        <axis>
            <x>1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>VORneedle</object-name>
        <property>instrumentation/flightdirector/hdg-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ADFneedle</object-name>
        <property>instrumentation/adf/indicated-bearing-deg</property>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>